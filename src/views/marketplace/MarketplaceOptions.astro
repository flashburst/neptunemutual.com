---
import { networks, swaps } from "../../data/networks";
import Button from "../../elements/buttons/Button.astro";

const t = (x: string): string => x;
---

<div class="marketplace options container">
  <div class="inner container">
    <div class="networks section">
      {
        networks.map(({ name, src, srcDark, link, text }) => (
          <a class="network item" href={link}>
            <i data-mode="light">
              <Fragment set:html={src || name} />
            </i>
            <i data-mode="dark">
              <Fragment set:html={srcDark || name} />
            </i>
            <div class="text container">
              <p class="name">{name}</p>
              <p class="text">{text}</p>
            </div>
          </a>
        ))
      }
    </div>

    <div class="get npm section">
      <div class="header">
        <h2 id="get-npm" class="title">
          <a
            aria-label="Direct link to heading"
            class="heading anchor"
            href="#get-npm"
          >
            Get NPM
          </a>
        </h2>
        <p class="desc">
          Get NPM governance tokens to: validate cover policies; fulfill the
          locking requirement for providing pool liquidity and voting; and
          unlock enhanced functionalities.
        </p>
      </div>

      <div class="swaps">
        {
          swaps.map(({ src, srcDark, title, href }) => (
            <div class="swap container">
              <div class="swap logo">
                <i data-mode="light">
                  <Fragment set:html={src || title} />
                </i>
                <i data-mode="dark">
                  <Fragment set:html={srcDark || title} />
                </i>
              </div>

              <h3 class="title">{title}</h3>

              <div class="swap link">
                <Button
                  href={href}
                  variant={"link-color"}
                  type="anchor"
                  size="lg"
                  iconTrailing="chevron-right"
                  inline
                  classname=""
                  target="_blank"
                >
                  Get NPM
                </Button>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
