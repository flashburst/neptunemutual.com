---
import BaseLayout from "../layouts/BaseLayout.astro";
import Ecosystem from "../views/Ecosystem.astro";
import Seo from "../components/Seo.astro";

import * as api from "../../service/api";
import { Api } from "../../types/enum";

const items = await api.getEnumerable<Ecosystem>(Api.Ecosystem, 1000, 0);
---

<BaseLayout headerStyle={"default"}>
  <Seo
    slot="seo"
    title="Decentralized Insurance Ecosystem / Neptune Mutual"
    description="Learn more about the roles of liquidity providers, policyholders, and cover creators in our decentralized insurance ecosystem."
    og={{
      image: "/assets/images/meta/og/ecosystem.png",
      imageAlt: "Neptune Mutual Decentralized Ecosystem",
    }}
  />
  <link slot="header" rel="stylesheet" href="/stylesheets/ecosystem.css" />
  <Ecosystem items={items} />

  <Fragment slot="footer">
    <script src="../scripts/ecosystem/index.js"></script>
  </Fragment>
</BaseLayout>
