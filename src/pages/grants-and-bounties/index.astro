---
import BaseLayout from "../../layouts/BaseLayout.astro";
import GrantsAndBounties from "../../views/GrantsAndBounties.astro";
import Seo from "../../components/Seo.astro";

import * as api from "../../../service/api";
import { Api } from "../../../types/enum";

const programs = await api.getEnumerable<Program>(Api.Program, 1000, 0);
---

<BaseLayout>
  <Seo
    slot="seo"
    title="Grants and Bounties / Neptune Mutual"
    description="Receive reward for driving adoption of the Neptune Mutual protocol through our grant and bounty initiatives."
    og={{
      image: "/assets/images/meta/og/grants-and-bounties.png",
      imageAlt: "Neptune Mutual Grants and Bounties Open Graph Banner",
    }}
  />
  <link
    slot="header"
    rel="stylesheet"
    href="/stylesheets/grants-and-bounties/index.css"
  />
  <GrantsAndBounties programs={programs} />

  <Fragment slot="footer">
    <script src="../../scripts/grants-and-bounties/index.js"></script>
  </Fragment>
</BaseLayout>
