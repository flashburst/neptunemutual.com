---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Seo from "../../../components/Seo.astro";

import * as api from "../../../../service/api";
import { Api } from "../../../../types/enum";
import HeaderSection from "../../../components/HeaderSection.astro";
import ProtocolContracts from "../../../views/protocol/ProtocolContracts.astro";

const paginated = await api.getContracts(Api.Contract);

const t = (x: string) => x;
---

<BaseLayout headerStyle={"colored"}>
  <Seo
    slot="seo"
    title="PODs / Neptune Mutual Protocol Contracts on Ethereum"
    description="View all POD contracts of the Neptune Mutual Protocol on Ethereum"
    og={{
      image: "/assets/images/meta/og/protocol-contracts.png",
      imageAlt: "PODs / Neptune Mutual Protocol Contracts on Ethereum",
    }}
  />
  <link
    slot="header"
    rel="stylesheet"
    href="/stylesheets/protocol/protocol.css"
  />

  <HeaderSection
    color={"basic"}
    alignment={"center"}
    heading={t("Neptune Mutual Protocol Contracts")}
  />

  <ProtocolContracts networkId={1} type={"pods"} data={paginated.data} />

  <Fragment slot="footer">
    <script src="../../../scripts/protocol/index.js"></script>
  </Fragment>
</BaseLayout>
